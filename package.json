{
  "name": "packaging-catalog",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm --filter @app/api dev",
    "lint": "pnpm -r lint",
    "format": "prettier . --write",
    "typecheck": "pnpm -r typecheck",
    "postinstall": "pnpm -r postinstall",
    "prepare": "husky && husky install",
    "dev:admin": "pnpm --filter @app/admin dev",
    "build:admin": "pnpm --filter @app/admin build",
    "start:admin": "pnpm --filter @app/admin start"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a",
  "devDependencies": {
    "husky": "^8.0.0"
  }
}
